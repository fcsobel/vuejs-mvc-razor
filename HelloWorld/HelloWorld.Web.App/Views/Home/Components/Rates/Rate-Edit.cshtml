                </div>*@
            </form>
                        
        </div>
    </div>

</template>


<script>
    app.component('rate-edit', {
        template: '#rate-edit-template',
        props: ['context', 'rate'],
        data: function () {
        },
        methods: {
            deleteRate(item)
            {
                this.context.data.rates.splice(this.context.data.rates.indexOf(item), 1);
            }
        },
        created() { },
        mounted() { },
    });
</script>